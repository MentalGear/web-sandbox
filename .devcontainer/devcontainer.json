// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/alpine
{
    "name": "DevContainer",
    // "context": "..",
    "dockerFile": "dockerfile",
    // need to reload bash / shell profile to ensure bun cmd is available after install through dockerfile
    "postCreateCommand": "source /home/vscode/.bashrc && git lfs checkout && bun install",
    // for security to not run in container as root
    "remoteUser": "vscode",
    // not needed to specify as ports should be auto-forwarded
    // "forwardPorts": [4000, 5173],
    "portsAttributes": {
        "4000": {
            "label": "Backend",
            "onAutoForward": "notify"
        },
        "5173": {
            "label": "FrontEnd",
            "onAutoForward": "notify"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "RooVeterinaryInc.roo-cline",
                "google.geminicodeassist"
                // for trailbase config types that are in textproto
                // but none of these extensions work
                // "pbkit.vscode-pbkit"
                // "bufbuild.vscode-buf"
                // "DrBlury.protobuf-vsc"
            ]
        }
    }
}
