{
  "name": "lofi-web-sandbox",
  "version": "1.0.0",
  "description": "Local-first web sandbox",
  "main": "dev-server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "test": "bun test:unit && bun test:e2e",
    "test:unit": "bun vitest --dir src",
    "test:e2e": "bun x playwright test --config=research/playwright.config.ts",
    "build-dist": "bun build ./src/host.ts ./src/lib/presets.ts --outdir ./dist --target browser --minify --sourcemap"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/bun": "^1.3.8",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.1",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  }
}
