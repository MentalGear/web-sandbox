{
  "name": "lofi-web-sandbox",
  "version": "1.0.0",
  "description": "Local-first web sandbox",
  "main": "server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run server.ts",
    "test": "bun x playwright test --config=research/playwright.config.ts",
    "build-dist": "bun build ./src/host.ts ./src/lib/presets.ts --outdir ./dist --target browser",
    "playground": "bun build-dist --watch & bun x serve playground"
  },
  "devDependencies": {
    "playwright": "^1.58.1",
    "@playwright/test": "^1.58.1",
    "@types/bun": "^1.3.8"
  }
}
